<?xml version="1.0" encoding="UTF-8"?>
<project name="module_javacontroller" default="compile.module.javacontroller">
  <dirname property="module.javacontroller.basedir" file="${ant.file.module_javacontroller}"/>
  
  <property name="module.jdk.home.javacontroller" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.javacontroller" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.javacontroller" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.javacontroller" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="javacontroller.output.dir" value="${module.javacontroller.basedir}/../../out/production/JavaController"/>
  <property name="javacontroller.testoutput.dir" value="${module.javacontroller.basedir}/../../out/test/JavaController"/>
  
  <path id="javacontroller.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="javacontroller.module.production.classpath">
    <path refid="${module.jdk.classpath.javacontroller}"/>
    <pathelement location="${controller.output.dir}"/>
    <pathelement location="${utils.output.dir}"/>
  </path>
  
  <path id="javacontroller.runtime.production.module.classpath">
    <pathelement location="${javacontroller.output.dir}"/>
    <path refid="controller.runtime.production.module.classpath"/>
    <path refid="utils.runtime.production.module.classpath"/>
  </path>
  
  <path id="javacontroller.module.classpath">
    <path refid="${module.jdk.classpath.javacontroller}"/>
    <pathelement location="${javacontroller.output.dir}"/>
    <pathelement location="${controller.testoutput.dir}"/>
    <pathelement location="${controller.output.dir}"/>
    <pathelement location="${utils.testoutput.dir}"/>
    <pathelement location="${utils.output.dir}"/>
  </path>
  
  <path id="javacontroller.runtime.module.classpath">
    <pathelement location="${javacontroller.testoutput.dir}"/>
    <pathelement location="${javacontroller.output.dir}"/>
    <path refid="controller.runtime.module.classpath"/>
    <path refid="utils.runtime.module.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.javacontroller">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.javacontroller">
    <patternset refid="excluded.from.module.javacontroller"/>
  </patternset>
  
  <path id="javacontroller.module.sourcepath">
    <dirset dir="${module.javacontroller.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.javacontroller" depends="compile.module.javacontroller.production,compile.module.javacontroller.tests" description="Compile module JavaController"/>
  
  <target name="compile.module.javacontroller.production" depends="register.custom.compilers,compile.module.controller,compile.module.utils" description="Compile module JavaController; production classes">
    <mkdir dir="${javacontroller.output.dir}"/>
    <javac2 destdir="${javacontroller.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.javacontroller}/javac">
      <compilerarg line="${compiler.args.javacontroller}"/>
      <bootclasspath refid="javacontroller.module.bootclasspath"/>
      <classpath refid="javacontroller.module.production.classpath"/>
      <src refid="javacontroller.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.javacontroller"/>
    </javac2>
    
    <copy todir="${javacontroller.output.dir}">
      <fileset dir="${module.javacontroller.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.javacontroller.tests" depends="register.custom.compilers,compile.module.javacontroller.production" description="compile module JavaController; test classes" unless="skip.tests"/>
  
  <target name="clean.module.javacontroller" description="cleanup module">
    <delete dir="${javacontroller.output.dir}"/>
    <delete dir="${javacontroller.testoutput.dir}"/>
  </target>
</project>